# Required Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENTID=your_discord_client_id_here
MONGODB_URL=mongodb://localhost:27017/project-kiyo

# Optional: Specific Guild ID for faster command deployment (comma-separated for multiple)
GUILDID=your_guild_id_here

# Discord OAuth2 for YouTube subscriber roles
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
# Use http://localhost:3001/auth/discord/callback for local development
# Use https://your-netlify-site.netlify.app/callback for production (Netlify)
DISCORD_REDIRECT_URI=http://localhost:3001/auth/discord/callback
OAUTH_STATE_SECRET=your_oauth_state_secret_here

# Optional API Keys for Enhanced Features
GEMINI_API_KEY=your_google_gemini_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
WEATHER_API_KEY=your_openweather_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# YouTube Subscriber Roles OAuth2 Configuration
USE_LOCAL_OAUTH=false
OAUTH2_PORT=3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FOLDER=logs

# Development
NODE_ENV=development